.col-6.col-sm-6.col-md-4.col-lg-3.col-xl-3.col-xxl-2
  .card

    - if project.project_images.first&.representable?
      = image_tag(project.project_images.first.representation( resize_to_limit: [300, 300]), class: 'card-img-top')

    .card-body

      %h6.card-title
        = link_to project.name, [:manage, project]
      .card-text
        = project.status

        = project.description

        = project.finisher&.name



    .card-footer
      #{project.city}, #{project.state}

