- if @project.manager_id.nil?
  #action-assign-manager.d-flex.flex-wrap.align-items-center
    .action-info.flex-grow-1
      %h3 Assign manager
      %p This project has no manager currently assigned.
    .action-cta
      #action-manager-container
        = turbo_frame_tag "project-manager-frame" do
          = render "manage/projects/project_manager_form", project: @project
