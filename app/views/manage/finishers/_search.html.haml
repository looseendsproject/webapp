= form_tag manage_finishers_path, :method => :get do
  .row.mb-0
    .col-7
      = label_tag :search, "Search", class: 'label'
    .col-2
      = label_tag :search, "Sort", class: 'label'
    .col-2
      = label_tag :search, "Available", class: 'label'
  .row.mb-4
    .col-7
      = text_field_tag :search, params[:search], class: 'form-control'
    .col-2
      = select_tag :sort, options_for_select(['date', 'name'], params[:sort]), include_blank: true, class: 'form-select'
    .col-2
      = select_tag :available, options_for_select(['no', 'yes'], params[:available]), include_blank: true, class: 'form-select'
  .row.mb-0
    .col
      = label_tag :search, "Skill", class: 'label'
    .col
      = label_tag :search, "Favorite", class: 'label'
    .col
      = label_tag :search, "Country", class: 'label'
    .col
      = label_tag :search, "State", class: 'label'
  .row.mb-4
    .col
      = select_tag :skill_id, options_from_collection_for_select(Skill.all, "id", "name", params[:skill_id]), include_blank: true, class: 'form-select'
    .col
      = select_tag :product_id, options_from_collection_for_select(Product.all, "id", "name", params[:product_id]), include_blank: true, class: 'form-select'
    .col
      = select_tag :country, options_for_select(@countries, params[:country]), include_blank: true, class: 'form-select'
    .col
      = select_tag :state, options_for_select(@states, params[:state]), include_blank: true, class: 'form-select'
  .row.mb-0
    .col-7
      = label_tag :location, "location", class: 'label'
    .col-2
      = label_tag :distance, "distance", class: 'label'
  .row.mb-4
    .col-7
      = text_field_tag :location, params[:location], class: 'form-control'
    .col-2
      = select_tag :distance, options_for_select([5,10,25,50,100,250,500], params[:distance]), class: 'form-select'      
    .col
      = submit_tag "Search", name: nil, class: 'btn btn-primary'
