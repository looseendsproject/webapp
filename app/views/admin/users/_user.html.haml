%tr
  %td
    = user.id
  %td
    = link_to user.name, [:admin, user]
  %td
    = user.email
  %td.text-center
    = user.projects.count
  %td.text-center
    - if user.volunteer?
      = fa_icon('user', class: 'volunteer')
  %td.text-center
    - if user.manager?
      = fa_icon('gear', class: 'manager')
  %td.text-center
    - if user.admin?
      = fa_icon('user-secret', class: 'admin')
