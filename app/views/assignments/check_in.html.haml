%h1 Check In

%pre= @note.notable.project.name

= form_with url: check_in_url(@note.notable), model: @note do |f|

  .pt-4
    - AssignmentsController::SENTIMENT_OPTIONS.map do |opt|
      = f.radio_button :sentiment, opt[:sentiment_value]
      = f.label "headline_#{opt[:sentiment_value]}".to_sym, opt[:sentiment_value]

  .pt-4
    %div Whazzup?
    = f.text_area :text

  .pt-4= f.submit
